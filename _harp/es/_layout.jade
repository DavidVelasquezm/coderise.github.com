doctype html
html
	head
		title= title
		meta(charset="UTF-8")
		meta(name="description" content="#{ description })")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
		script(src="http://code.jquery.com/jquery-latest.js", type="text/javascript")
		script(src="/js/default.js", type="text/javascript")
		script(src="/js/tabs.js", type="text/javascript")
		script(src="/js/googleAnalytics.js", type="text/javascript")
		link(href="/css/default2.css", type="text/css", rel="stylesheet", media="all")
		link(href="/css/1140.css", type="text/css", rel="stylesheet", media="all")
		link(rel="icon", type="image/png", href="/favicon.png")
	body
		#container
			header.container(role="banner")
				.row
					.twelvecol
						a.logo(href="/es/index.html")
							| //coderise
						a.icon-list menu
						nav(role="navigation")
							ul
								li.dropdown
									a(href="javascript:void(0)")
										| Acerca
										span.icon-dropdown-arrow &#9660;
									ul
										li
											a(href="/es/acerca") Sobre Coderise
										li
											a(href="/es/como") Como funciona
										li
											a(href="/es/mentores") Mentores
										li
											a(href="/es/equipo") Equipo
										li
											a(href="/es/estudiantes") Estudiantes
								li.dropdown
									a(href="javascript:void(0)")
										| Prensa
										span.icon-dropdown-arrow &#9660;
									ul
										li
											a(href="/es/prensa") Cubrimiento
										li
											a(href="/es/comunicados") Comunicados
								//li
									a(href="https://support.coderise.org") Apoya
								li
									a(href="/es/aplica") Aplica
								//li.last
									a(href="/posts/") Blog

			!= yield

			footer.wrap-mini.wrap-navy
				.row
					a.left.localization(href="/index.html") Coderise in ENGLISH
					.social-widgets
						a.tb(href="http://coderise.tumblr.com/")
						a.tw(href="http://twitter.com/Code_rise")
						a.fb(href="http://www.facebook.com/Coderise")
		script(type="text/javascript", src="js/kickofflabs.js")